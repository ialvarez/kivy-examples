#:kivy 1.0.9

<ArkanoidBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<ArkanoidPaddle>:
    size: 200, 25
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<ArkanoidBreakable>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<ArkanoidGame>:
    ball: arkanoid_ball
    player: main_player 

    Label:
        font_size: 30
        center_x: root.width * 0.9
        top: root.top * 0.2
        text: str(root.player.score) 

    Label:
        font_size: 30
        center_x: root.width * 0.5
        top: root.height* 0.5
        text: str(root.game_over) 
        
    ArkanoidBall:
        id: arkanoid_ball
        center: self.parent.center

    ArkanoidPaddle:
        id: main_player
        y: root.y
        top: root.top * 0.2
        center_x: root.center_x

