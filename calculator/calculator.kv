#:kivy 1.0.9

<CalculatorLabelDisplay>:
    canvas.before:
        Color: 
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    text: ''
    color: 0,0,0,1
    font_size: '50sp'
    text_size: self.size
    halign: 'right'
    valign: 'middle'

<CalculatorButtonDisplay>:
    canvas.before:
        Color: 
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    background_normal: 'cancel.png'
    background_down: 'cancel.png'
    on_press: root.do_action()
    size_hint_y: None
    size_hint_x: None

<CalculatorNumbers>:
    canvas.before:
        Color: 
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<CalculatorRoot>:
    orientation: 'vertical'
    BoxLayout:
        canvas.before:
            Color: 
                rgb: (1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'horizontal'
        size_hint_y: .4
        CalculatorLabelDisplay:
            id: display
        CalculatorButtonDisplay:
            id: clear
    CalculatorNumbers:
        id: numbers
        orientation: 'vertical' 
