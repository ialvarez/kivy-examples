#:kivy 1.0.9

<CalculatorDisplay>:
    canvas.before:
        Color: 
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    text: ''
    color: 0,0,0,1
    size_hint_y: None
    font_size: '75sp'

<CalculatorNumbers>:
    canvas.before:
        Color: 
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<CalculatorRoot>:
    orientation: 'vertical'
    CalculatorDisplay:
        id: display
    CalculatorNumbers:
        id: numbers
        orientation: 'vertical' 
