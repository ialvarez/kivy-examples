<TimeClockHeader>:
    canvas.before:
        Color: 
            rgb: (.72, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    color: (0, .28, 0, 1)
    font_size: '30sp'
    text_size: self.size
    valign: 'bottom'

<TimeClockLabel>:
    font_size: '25sp'
    text_size: self.size
    halign: 'left'
    valign: 'middle'

<TimeClockStatus>:
    orientation: 'vertical'
    TimeClockLabel:
        text: 'Status'
    TimeClockHeader:
        halign: 'center'
        text: 'Total work hours'
    TimeClockLabel:
        text: 'Today'
    TimeClockLabel:
        text: 'This week'

<TimeClockButton>:

<TimeClockList>:

<TimeClockListItem>:
    canvas.before:
        Color: 
            rgb: (.72, .72, .72)
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y: None
    height: "75dp"
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: root.ts_in
            color: root.color
        Label:
            text: root.ts_out
            color: root.color

<TimeClockRoot>:
    orientation: 'vertical'
    TimeClockHeader:
        halign: 'right'
        size_hint_y: .1
        text: app.current_date()
    TimeClockStatus:
        size_hint_y: .5
    TimeClockList:
        id: entries
    BoxLayout:
        size_hint_y: .2
        TimeClockButton:
            text: 'in'
        TimeClockButton:
            text: 'out'

