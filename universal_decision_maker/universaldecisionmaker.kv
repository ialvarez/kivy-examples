<DecisionLabel>:
    size_hint_y: None
    halign: 'center'
    valign: 'middle'
    color: (.25, .25, .25, 1)
    text_size: self.width, None
    height: self.texture_size[1]
    

<YesLabel>:
    canvas.before:
        Color: 
            rgb: (.4, .8, .2)
        Rectangle:
            pos: self.pos
            size: self.size

<NoLabel>:
    canvas.before:
        Color: 
            rgb: (1, .4, .4)
        Rectangle:
            pos: self.pos
            size: self.size

<ProgressList>:
    orientation: 'vertical'

<DecisionRoot>:
    orientation: 'vertical'
    canvas.before:
        Color: 
            rgb: (.92, .92, .92)
        Rectangle:
            pos: self.pos
            size: self.size

    DecisionLabel: 
        id: result
        text: 'The Universal Decision Maker'
        font_size: '60sp'


    DecisionLabel:
        canvas.before:
            Color: 
                rgb: (.25, .25, .25)
            Rectangle:
                pos: self.pos
                size: self.size
        height: 1

    DecisionLabel:
        id: welcome 
        text: 'For when flipping a coin just seems so 20th century'
        font_size: '13sp'
        height: 30

    BoxLayout:
        id: progress_bars
        ProgressList:
            id: yes
        ProgressList:
            id: no

    Button:
        id: start
        text: 'START'
        size_hint_y: None
        on_press: root.start()
        font_size: '40sp'
        text_size: self.size
        halign: 'center'
        valign: 'middle'

